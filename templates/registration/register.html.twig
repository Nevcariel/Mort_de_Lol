{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/forms.css') }}">
{% endblock %}

{% block title %}Inscription{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block main %}
    
    
        {{ form_start(form) }}
        <div class="form-container">
            <div class="form-title"><h2>Inscription</h2></div>
                <div class="form-group-row">
                {{ form_label(form.username, 'Nom d\'utilisateur') }}
                {{ form_widget(form.username) }}
                {{ form_label(form.email, 'Adresse mail') }}
                {{ form_widget(form.email) }}
                {{ form_label(form.plainPassword.first, 'Mot de passe') }}
                {{ form_widget(form.plainPassword.first) }}
                {{ form_label(form.plainPassword.second, 'Répéter mot de passe') }}
                {{ form_widget(form.plainPassword.second) }}
                <a href="{{ asset('/login') }}">Connexion</a>
                <div class="submit-container">
                    <button class="submit-button" type="submit">Continuer</button>
                </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}   
    
{% endblock %}
