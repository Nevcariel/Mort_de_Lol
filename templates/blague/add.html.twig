{% extends 'base.html.twig' %}

{% block title %}Ajouter une blague{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block main %}

        {{ form_start(form) }}
            <div class="form-group-row">
                <div class="col-sm-4 offset-sm-4">
                    <div class="form-title"><h2>Ajouter un blague</h2></div>
                    {{ form_row(form.titre) }}
                    {{ form_row(form.contenu) }}
                    {{ form_row(form.categories) }}
                    {{ form_row(form.save) }}
                </div>
            </div>
        {{ form_end(form) }}  

{% endblock %}